<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <TextView
        android:id="@+id/sub_title"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="test"
        android:textSize="18sp"
         />

    <TextView
        android:id="@+id/sub_bulk"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/sub_title"
        android:text="1" />

    <TextView
        android:id="@+id/sub_price_txtv"
        android:textColor="@color/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/sub_add_but"
        android:text="test"
        android:layout_marginRight="10dp"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/sub_add_but"
        android:layout_centerVertical="true"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/sub_quantity"
        app:srcCompat="@drawable/ic_action_add"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/sub_remove_but"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_delete"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/sub_quantity"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/sub_remove_but"
        android:inputType="number"
        android:text="0"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>